---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  features: string[];
  resources: string[];
  icon: string;
  color: string;
}

const { title, subtitle, description, features, resources, icon, color } = Astro.props;
---

<div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden group">
  <div class={`h-2 ${color}`}></div>
  
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <div>
        <h3 class="text-2xl font-serif font-bold text-greiff-dark mb-1">{title}</h3>
        <p class="text-sm text-greiff-accent font-medium">{subtitle}</p>
      </div>
      <div class="text-4xl opacity-50 group-hover:opacity-100 transition-opacity">
        {icon}
      </div>
    </div>
    
    <p class="text-greiff-gray mb-6 leading-relaxed">{description}</p>
    
    <div class="space-y-4">
      <div>
        <h4 class="text-sm font-semibold text-greiff-dark mb-2 uppercase tracking-wide">Caracter√≠sticas Clave</h4>
        <ul class="space-y-2">
          {features.map((feature) => (
            <li class="flex items-start text-sm text-greiff-gray">
              <svg class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>{feature}</span>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="text-sm font-semibold text-greiff-dark mb-2 uppercase tracking-wide">Recursos Necesarios</h4>
        <div class="flex flex-wrap gap-2">
          {resources.map((resource) => (
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-greiff-gray">
              {resource}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>
